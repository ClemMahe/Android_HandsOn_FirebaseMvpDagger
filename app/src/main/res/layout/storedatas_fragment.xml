<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_list_peripherals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.clemmahe.firebasemvpdagger.authent.AuthentActivity"
    tools:showIn="@layout/authent_activity"
    android:padding="10dp">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/storeddata_latitude_inputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/storeddata_edittext_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/storeddata_edittext_latitude_hint" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/storeddata_longitude_inputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storeddata_latitude_inputlayout">
        <EditText
            android:id="@+id/storeddata_edittext_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/storeddata_edittext_longitude_hint" />
    </android.support.design.widget.TextInputLayout>


    <Button android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/storeddata_storefakeposition"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:text="@string/storeddata_button_storefakeposition"
        android:layout_below="@+id/storeddata_longitude_inputlayout"/>


</RelativeLayout>
